<%= form_for @player do |form| %>


<%= form.label :name %>
<%= form.text_field :name %>
<br>

<%= form.label :shooting %>
<%= form.text_field :shooting %>
<br>

<%= form.label :defending %>
<%= form.text_field :defending %>
<%#=  form.range_field :discipline, :min => 0, :max => 250 %>
<br>

<%= form.label :discipline %>
<%= form.select :discipline, options_for_select(%w[Excellent Good Bad Poor]) %>
<br>

<%= form.label :team %>
<%= form.select :team, options_for_select(1..5)%>
<br>


<%= form.label :experiance %>
<%= form.select :experiance, options_for_select(1..20)%> years

<br>
<%= form.label 'Date Of Birth' %>
<%= form.date_select :DateOfBirth,
  {:start_year => Time.now.year,
  :end_year => 1900,
  :use_short_month => true,
  :order => [:month, :day, :year],
  :prompt => {:month => 'Month', :day => 'Day', :year => 'Year'}},
  {:class => 'year',
  :id => 'user_birthday'}
%>

<br>

<%= form.submit %>
<% end %>