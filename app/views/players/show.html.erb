<div class="player-profile">
	<div class="top-row">
		<div class="profile-image-border">
			<div class="profile-image">
				<%= image_tag @player.image.url, class: 'player-upload-image' %>
			</div>
			<div class="profile-name">				
				<h2 class="name"><%= @player.name %></h2>
				<h4 class="name">Richmond 1st XI</h4>
				<a href="#"><%= image_tag("twitter.png", :alt => "The Team", :class => "twitter-icon") %> @TomGroombridge</a>
			</div>
		</div>
		<div class="player-data">
			<div class="player-scores">
				<div class="player-points">
					<div class="point-icon">
					</div>
					<div class="score">
					</div>
					<div class="points-title">
						<p>Attack</p>
					</div>
				</div>
				<div class="player-points">
					<div class="point-icon">
					</div>
					<div class="score">
					</div>
					<div class="points-title">
						<p>Defense</p>
					</div>
				</div>
				<div class="player-points">
					<div class="point-icon">
					</div>
					<div class="score">
					</div>
					<div class="points-title">
						<p>Discipline</p>
					</div>
				</div>
				<div class="player-points">
					<div class="point-icon">
					</div>
					<div class="score">
					</div>
					<div class="points-title">
						<p>Training</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="bottom-row">
		<table class="player-stats">
			<thead class="table-header">
				<tr class="table-header-row">
					<th class="table-collum-title">game</th>
					<th class="table-collum-title">week</th>
					<th class="table-collum-title">week</th>
					<th class="table-collum-title">week</th>
